<!--pages/index.wxml-->
<view class="" hover-class="none" hover-stop-propagation="false">
  <swiper indicator-dots autoplay indicator-color="ivory" indicator-active-color="#d43c33" interval="{{5000}}" duration="{{500}}">
    <block wx:for="{{bannerList}}" wx:key="bannerId">
      <swiper-item>
        <image class="swiper-image" src="{{item.pic}}" />
      </swiper-item>
    </block>
  </swiper>
  
  <!-- 图标导航 -->
  <view class="icon-wra" hover-class="none" hover-stop-propagation="false">
    <view class="icon-item" bindtap="toRecommend">
      <text class="iconfont icon-meirituijian"></text>
      <text>每日推荐</text>
    </view>
    <view class="icon-item">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="icon-item">
      <text class="iconfont icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="icon-item">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="icon-item">
      <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>
  </view>
  <!-- 推荐区域 -->
  <NavTitle title="推荐歌曲" nav="为你精心推荐"/>
  <view class="zhanwei">
    <scroll-view scroll-x enable-flex class="recImg-wra">
    <view class="scroll-item" wx:for="{{recList}}" wx:key="id">
      <image src="{{ item.picUrl}}"></image>
      <text class>{{ item.name}}</text>
    </view>
  </scroll-view>
  </view>
  <NavTitle title="排行榜" nav="热歌风向标" />
  <view class="topList">

    <!-- 内容区域 -->

    <swiper class="topListSwiper" circular next-margin="50rpx" previous-margin="50rpx">
      <swiper-item wx:for="{{topList}}" wx:key="name">
        <view class="swiperItem">
          <view class="title">{{item.name}}</view>
          <view class="musicItem" wx:for="{{item.tracks}}" wx:key="id" wx:for-item="musicItem">
            <image src="{{musicItem.al.picUrl}}"></image>
            <text class="count">{{index + 1}}</text>
            <text class="musicName">{{musicItem.name}}</text>
          </view>
        </view>
      </swiper-item>

    </swiper>
  </view>
</view>
