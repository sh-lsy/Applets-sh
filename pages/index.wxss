/* pages/index.wxss */
.swiper-image {
  width: 100%;
  height: 100%;
}
/* 导航区 */
.icon-wra {
  display: flex;
  justify-content: space-around;
}
.icon-item {
  display: flex;
  flex-direction:column;
  text-align: center;
}
.icon-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.icon-item text {
  font-size: 26rpx;
}

/* 推荐内容 */
.recImg-wra {
  display: flex;
  height: 300rpx;
}
.scroll-item {
  width: 200rpx;
  margin:0 20rpx;
}
.recImg-wra image{
  width: 200rpx;
  height: 200rpx;
  border-radius:10rpx;
}
.scroll-item text{
  font-size:26rpx;
    /* 单行文本溢出隐藏 省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置多行的行数*/
}
.zhanwei {
  padding: 0 20rpx 5rpx 0;
}
/* 歌曲list */
.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 400rpx;
}

.swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;

}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}